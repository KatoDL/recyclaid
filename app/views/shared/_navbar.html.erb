<div class="navbar">
  <ul>
    <li class="fullwidth>
      <%= link_to root_path do %>
        <%= image_tag "logo Recyclaid-green.png", class:"nav-img" %>
      <% end %>
    </li>
    <%# <div class="quick-access"> %>
      <% if user_signed_in? %>
        <%# <div class="word-links"> %>
          <li class="nav-item">
            <%= link_to "Find materials", materials_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Share materials", new_material_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
          </li>
        <%# </div> %>
        <li class="avatar-img">
          <div class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown", toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "no-profile-picture-jpg-hd-png-download.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown", toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    <%# </div> %>
  </ul>
</div>
