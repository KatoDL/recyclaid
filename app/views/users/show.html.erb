<div class="general-container">
  <div class="info-container">
    <div class="profilepicture">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, class: "imgprofile" %>
      <% else %>
        <%= image_tag "no-profile-picture-jpg-hd-png-download.png", class: "imgprofile" %>
      <% end %>
    </div>
    <h1><%= @user.name %></h1>
    <h4>"<%= @user.description %>"</h4>
    <div class="review">
      <% @user.materials.each do |material| %>
        <% material.buyings.each do |buying| %>
          <% if buying.user == current_user %>
            <%= simple_form_for [ @user, @review ] do |f| %>
              <%= f.input :rating %>
              <%= f.submit "Send review", class: "btn btn-primary" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <ul class="list-group">
        <% @user.reviews_as_reviewee.each do |review| %>
          <li class="list-group-items"><%= review.rating %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="profilecontent">
    <div class="itemsforsale">
      <h3>Items for sale</h3>
      <hr>
      <% @user.materials.each do |material| %>
        <% if material.available %>
          <div class="card-container-index">
            <div class="card-index-images">
              <% if material.photos.attached? %>
                <% material.photos.each do |photo| %>
                  <div class='material-img' style="background-image: url('<%= cl_image_path photo.key %>')"></div>
                <% end %>
              <% end %>
            </div>
            <div class="card-index-infos">
              <div class="name-description">
                <h3><%= link_to material.name, material_path(material) %></h3>
                <p><%= material.description %></p>
              </div>
              <div class="icons">
                <p><i class="fas fa-euro-sign"></i> <%= material.price %></p>
                <p><i class="fas fa-map-marker-alt"></i> <%= material.location %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="solditems">
      <h3>Sold items</h3>
      <hr>
      <% @user.materials.each do |material| %>
        <% if !material.available %>
          <div class="card-container-index">
            <div class="card-index-images">
              <% if material.photos.attached? %>
                <% material.photos.each do |photo| %>
                  <div class='material-img' style="background-image: url('<%= cl_image_path photo.key %>')"></div>
                <% end %>
              <% end %>
            </div>
            <div class="card-index-infos">
              <div class="name-description">
                <h3><%= link_to material.name, material_path(material) %></h3>
                <p><%= material.description %></p>
              </div>
              <div class="icons">
                <p><i class="fas fa-euro-sign"></i> <%= material.price %></p>
                <p><i class="fas fa-map-marker-alt"></i> <%= material.location %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
