<div class="form">
  <div class="form_title">New material offer</div>
  <br>
  <%= image_tag "materials_form.jpg", class:"form_img" %>
  <div>
  <br>
    <%= simple_form_for(@material) do |f| %>
      <%= f.input :name, input_html:{class:"input_text"}, placeholder:"Name", label: false %>
      <%= f.input :description, input_html:{class:"input_text"}, placeholder:"Description of your product", label: false %>
      <%= f.input :location, input_html:{class:"input_text"}, placeholder:"Address", label: false %>
      <%= f.input :price_cents, input_html:{class:"input_text" ,value: nil}, placeholder:"Price in â‚¬", label: false %>
      <br>
      <div class="file_wrap">
        <%= f.input :photos, as: :file, input_html:{multiple: true}, label: false %>
      </div>
      <br>
      <%= f.submit "Submit", class:"submit_button" %>
    <% end %>
  </div>
</div>
