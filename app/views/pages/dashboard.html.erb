<div class="profilepicture">
  <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, class: "imgprofile" %>
  <% else %>
    <%= image_tag "no-profile-picture-jpg-hd-png-download.png", class: "imgprofile" %>
  <% end %>
</div>
<h1><%= @user.name %></h1>
<h2>"<%= @user.description %>"</h2>
<h5>Your items</h5>
<div class="cards-container-index">
  <% @user.materials.each do |material| %>
    <div class="card-container-index">
      <div class="card-index-images">
        <% if material.photos.attached? %>
          <% material.photos.each do |photo| %>
            <div class='material-img' style="background-image: url('<%= cl_image_path photo.key %>')"></div>
          <% end %>
        <% end %>
      </div>
      <div class="card-index-infos">
        <div class="name-description">
          <h3><%= link_to material.name, material_path(material) %></h3>
          <p><%= material.description %></p>
        </div>
        <div class="icons">
          <p><i class="fas fa-euro-sign"></i> <%= material.price %></p>
          <p><i class="fas fa-map-marker-alt"></i> <%= material.location %></p>
        </div>
        <div>
          <p><%= link_to "Delete", material_path(material), method: :delete, data: {confirm: "Are you sure?"} %></p>
        </div>
      </div>
    </div>
  <% end %>
<p><%= link_to "Create a new offer", new_material_path %></p>
</div>

<h5>Interests</h5>
<div class="cards-container-index">
  <% @buyings.each do |buying| %>
  <%# <hr> %>
    <div class="card-container-index">
      <div class="card-index-images">
        <% if buying.material.photos.attached? %>
          <% buying.material.photos.each do |photo| %>
            <div class='material-img' style="background-image: url('<%= cl_image_path photo.key %>')"></div>
          <% end %>
        <% end %>
      </div>
      <div class="card-index-infos">
        <div class="name-description">
          <p>Product name : <%= link_to "#{buying.material.name}", buying_path(buying) %></p>
          <p>Buying request status : <%= buying.status %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<h5>Sales to be confirmed</h5>
